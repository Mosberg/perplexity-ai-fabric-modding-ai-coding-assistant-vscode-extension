{
  "name": "perplexity-fabric-modding-ai",
  "displayName": "Perplexity Fabric Modding AI",
  "description": "AI-powered Fabric modding: 10+ generators, chat, completions, project setup",
  "version": "2.0.0",
  "publisher": "mosberg",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages", "Other"],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:json",
    "onLanguage:gradle",
    "onLanguage:properties",
    "onCommand:fabric.*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fabric.setApiKey",
        "title": "Fabric AI: Set Perplexity API Key"
      },
      {
        "command": "fabric.newMod",
        "title": "Fabric AI: New Mod Project"
      },
      {
        "command": "fabric.generateEntity",
        "title": "Fabric AI: Generate Entity"
      },
      {
        "command": "fabric.generateBlock",
        "title": "Fabric AI: Generate Block"
      },
      {
        "command": "fabric.generateItem",
        "title": "Fabric AI: Generate Item"
      },
      {
        "command": "fabric.generateCommand",
        "title": "Fabric AI: Generate Command"
      },
      {
        "command": "fabric.generateRenderer",
        "title": "Fabric AI: Generate Renderer"
      },
      {
        "command": "fabric.generateScreen",
        "title": "Fabric AI: Generate Screen"
      },
      {
        "command": "fabric.generateOverlay",
        "title": "Fabric AI: Generate HUD Overlay"
      },
      {
        "command": "fabric.generateConfig",
        "title": "Fabric AI: Generate Config"
      },
      {
        "command": "fabric.generateMixin",
        "title": "Fabric AI: Generate Mixin"
      },
      {
        "command": "fabric.showLogs",
        "title": "Fabric AI: Show Logs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fabric-ai-sidebar",
          "title": "ðŸ¤– Fabric AI",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "fabric-ai-sidebar": [
        {
          "type": "webview",
          "id": "fabric.agent",
          "name": "Fabric AI Assistant",
          "icon": "media/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "Fabric AI",
      "properties": {
        "fabric.minecraftVersion": {
          "type": "string",
          "default": "1.21.10",
          "description": "Minecraft version"
        },
        "fabric.fabricApiVersion": {
          "type": "string",
          "default": "0.138.4+1.21.10",
          "description": "Fabric API version"
        },
        "fabric.modId": {
          "type": "string",
          "default": "mana",
          "description": "Default mod ID"
        },
        "fabric.packageName": {
          "type": "string",
          "default": "dk.mosberg",
          "description": "Java package name"
        },
        "fabric.perplexityApiKey": {
          "type": "string",
          "description": "Perplexity API key (pplx-...)"
        }
      }
    },
    "snippets": [
      {
        "language": "java",
        "path": "./snippets/fabric-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "abort-controller": "^3.0.0"
  }
}
