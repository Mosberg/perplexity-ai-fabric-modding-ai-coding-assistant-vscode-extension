{
  "name": "ultimate-fabric-modding-ai",
  "displayName": "Ultimate Fabric Modding AI",
  "description": "AI-powered Fabric modding: Copilot + CodeGen + Chat + Completions + ALL features combined",
  "version": "2.0.0",
  "publisher": "mosberg",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:json",
    "onLanguage:gradle",
    "onLanguage:properties",
    "onCommand:fabric.*",
    "onCommand:copilot.*",
    "onView:fabric.*"
  ],
  "main": "./out/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "fabric.setApiKey",
        "title": "Fabric AI: Set API Keys"
      },
      {
        "command": "fabric.newMod",
        "title": "Fabric AI: New Mod Project"
      },
      {
        "command": "fabric.generateEntity",
        "title": "Fabric AI: Generate Entity"
      },
      {
        "command": "fabric.generateBlock",
        "title": "Fabric AI: Generate Block"
      },
      {
        "command": "fabric.generateItem",
        "title": "Fabric AI: Generate Item"
      },
      {
        "command": "fabric.generateCommand",
        "title": "Fabric AI: Generate Command"
      },
      {
        "command": "fabric.generateRenderer",
        "title": "Fabric AI: Generate Renderer"
      },
      {
        "command": "fabric.generateScreen",
        "title": "Fabric AI: Generate Screen"
      },
      {
        "command": "fabric.generateOverlay",
        "title": "Fabric AI: Generate HUD"
      },
      {
        "command": "fabric.generateConfig",
        "title": "Fabric AI: Generate Config"
      },
      {
        "command": "fabric.generateMixin",
        "title": "Fabric AI: Generate Mixin"
      },
      {
        "command": "copilot.chat",
        "title": "Copilot: Chat"
      },
      {
        "command": "copilot.explain",
        "title": "Copilot: Explain Code"
      },
      {
        "command": "copilot.generate",
        "title": "Copilot: Generate Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fabric-ai",
          "title": "ðŸ¤– Fabric AI",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "fabric-ai": [
        {
          "type": "webview",
          "id": "fabric.agent",
          "name": "AI Assistant",
          "icon": "media/icon.png"
        },
        {
          "type": "webview",
          "id": "fabric.generators",
          "name": "Generators",
          "icon": "media/icon.png"
        },
        {
          "type": "webview",
          "id": "fabric.chat",
          "name": "Chat",
          "icon": "media/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "Ultimate Fabric AI",
      "properties": {
        "fabric.modId": {
          "type": "string",
          "default": "mana",
          "description": "Mod ID (lowercase, e.g. mana)"
        },
        "fabric.packageName": {
          "type": "string",
          "default": "dk.mosberg",
          "description": "Java base package for generated code (e.g. dk.mosberg)"
        },
        "fabric.minecraftVersion": {
          "type": "string",
          "default": "1.21.10",
          "description": "Minecraft version for mod project"
        },
        "fabric.yarnMappings": {
          "type": "string",
          "default": "1.21.10+build.3",
          "description": "Yarn mappings version (e.g. 1.21.10+build.3)"
        },
        "fabric.loaderVersion": {
          "type": "string",
          "default": "0.18.4",
          "description": "Fabric Loader version (e.g. 0.18.4)"
        },
        "fabric.fabricVersion": {
          "type": "string",
          "default": "0.138.4+1.21.10",
          "description": "Fabric API version (e.g. 0.138.4+1.21.10)"
        },
        "fabric.loomVersion": {
          "type": "string",
          "default": "1.14.10",
          "description": "Loom version (e.g. 1.14.10)"
        },
        "fabric.javaVersion": {
          "type": "number",
          "default": 21,
          "description": "Java version (e.g. 21)"
        },
        "copilot.model": {
          "type": "string",
          "default": "sonar-pro",
          "enum": [
            "sonar-pro",
            "llama-3.1",
            "deepseek"
          ]
        }
      }
    },
    "snippets": [
      {
        "language": "java",
        "path": "./snippets/fabric-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.4.5",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-electron": "^2.5.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
